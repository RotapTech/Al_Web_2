@model Al_Web_2.Models.Kullanicilar
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/jQueryMultiSelectDropdown/css/bootstrap-3.1.1.min.css" type="text/css" />
<link rel="stylesheet" href="~/jQueryMultiSelectDropdown/css/bootstrap-multiselect.css" type="text/css" />

<script type="text/javascript" src="https://code.jquery.com/jquery-1.8.2.js"></script>
<script type="text/javascript" src="~/jQueryMultiSelectDropdown/js/bootstrap-2.3.2.min.js"></script>
<script type="text/javascript" src="~/jQueryMultiSelectDropdown/js/bootstrap-multiselect.js"></script>

<br />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">


                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Ad</label>
                    <input type="text" name="Ad" class="form-control" value="@Model.Ad" required oninvalid="this.setCustomValidity('Lütfen işaretli yeri doldurunuz')" onchange="this.setCustomValidity('')" />
                </div>

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Soyad</label>
                    <input type="text" name="Soyad" class="form-control" value="@Model.Soyad" required oninvalid="this.setCustomValidity('Lütfen işaretli yeri doldurunuz')" onchange="this.setCustomValidity('')" />
                </div>

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Email</label>
                    <input type="text" name="Email" class="form-control" value="@Model.Email" required oninvalid="this.setCustomValidity('Lütfen işaretli yeri doldurunuz')" onchange="this.setCustomValidity('')" />
                </div>

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Kullanıcı Adı</label>
                    <input type="text" name="KullaniciAd" class="form-control" value="@Model.KullaniciAd" required oninvalid="this.setCustomValidity('Lütfen işaretli yeri doldurunuz')" onchange="this.setCustomValidity('')" />
                </div>

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Şifre</label>
                    <input type="text" name="Sifre" class="form-control" value="@Model.Sifre" />
                </div>

                @*<div class="tox-form-group--maximize"style="margin-top:30px;">
            <label>Rol</label>
            <input type="text" name="Rol" class="form-control" value="@Model.Rol" required oninvalid="this.setCustomValidity('Lütfen işaretli yeri doldurunuz')" onchange="this.setCustomValidity('')"/>
        </div>*@

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Kanal</label>
                    <br />

                    @*@Html.ListBoxFor(x => x.KanalEkle, (List<SelectListItem>)ViewBag.knl, new { @class = "form-control" })*@

                    <select class="form-control" id="KanalEkle" multiple="multiple" name="KanalEkle">

                        @for (int i = 0; i < ViewBag.knl.Count; i++)
                        {
                            if (ViewBag.knl[i].Selected == true)
                            {
                                <option selected value="@ViewBag.knl[i].Value">@ViewBag.knl[i].Text</option>

                            }
                            else
                            {
                                <option value="@ViewBag.knl[i].Value">@ViewBag.knl[i].Text</option>

                            }
                        }

                    </select>
                </div>


                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Cihaz</label>
                    <br />

                    @*@Html.ListBoxFor(x => x.KanalEkle, (List<SelectListItem>)ViewBag.knl, new { @class = "form-control" })*@

                    <select class="form-control" id="CihazEkle" multiple="multiple" name="CihazEkle">

                        @for (int i = 0; i < ViewBag.chz.Count; i++)
                        {
                            if (ViewBag.chz[i].Selected == true)
                            {
                                <option selected value="@ViewBag.chz[i].Value">@ViewBag.chz[i].Text</option>

                            }
                            else
                            {
                                <option value="@ViewBag.chz[i].Value">@ViewBag.chz[i].Text</option>

                            }
                        }

                    </select>
                </div>

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Firma</label>
                    @*@Html.ListBoxFor(x => x.KanalEkle, (List<SelectListItem>)ViewBag.knl, new { @class = "form-control" })*@

                    <br />
                    <select class="form-control" id="FirmaEkle" name="SirketEkle" required oninvalid="this.setCustomValidity('Lütfen işaretli yeri doldurunuz')" onchange="this.setCustomValidity('')">

                        @for (int i = 0; i < ViewBag.frm.Count; i++)
                        {
                            if (ViewBag.frm[i].Selected == true)
                            {
                                <option selected value="@ViewBag.frm[i].Value">@ViewBag.frm[i].Text</option>

                            }
                            else
                            {
                                <option value="@ViewBag.frm[i].Value">@ViewBag.frm[i].Text</option>

                            }
                        }


                    </select>
                </div>



                <br />
                <br />
                <button type="submit" class="btn btn-primary">Guncelle</button>
                <a href="/KullaniciEkle/Index">Kullanıcı Listesi</a>

            </form>
        </div>
    </div>

</div>

<script type="text/javascript">
    $(function () {
        $('#KanalEkle').multiselect({
            includeSelectAllOption: true
        });
    });

    $(function () {
        $('#CihazEkle').multiselect({
            includeSelectAllOption: true
        });
    });



</script>

