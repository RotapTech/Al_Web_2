@model Al_Web_2.Models.CihazEkle
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Cihaz Ad</label>
                    <input type="text" name="CihazAd" class="form-control" value="@Model.CihazAd" required oninvalid="this.setCustomValidity('Lütfen işaretli yeri doldurunuz')" onchange="this.setCustomValidity('')" />
                </div>

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Cihaz Seri-No</label>
                    <input type="text" name="CihazSeriNo" class="form-control" value="@Model.CihazSeriNo" required oninvalid="this.setCustomValidity('Lütfen işaretli yeri doldurunuz')" onchange="this.setCustomValidity('')" />
                </div>

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Sim Kart</label>
                    <input type="text" name="SimCard" class="form-control" value="@Model.SimCard" required oninvalid="this.setCustomValidity('Lütfen işaretli yeri doldurunuz')" onchange="this.setCustomValidity('')" />
                </div>

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Kullanıcı</label>
                    <br />


                    @*@Html.ListBoxFor(x => x.Kullanicilar, (List<SelectListItem>)ViewBag.kllnc, new { @class = "form-control" })*@


                    <select class="form-control" id="Kullanicilar" multiple="multiple" name="Kullanicilar">

                        @for (int i = 0; i < ViewBag.kllnc.Count; i++)
                        {
                            if (ViewBag.kllnc[i].Selected == true)
                            {
                                <option selected value="@ViewBag.kllnc[i].Value">@ViewBag.kllnc[i].Text</option>

                            }
                            else
                            {
                                <option value="@ViewBag.kllnc[i].Value">@ViewBag.kllnc[i].Text</option>

                            }
                        }

                    </select>

                </div>

                <div class="tox-form-group--maximize" style="margin-top:30px;">
                    <label>Firma</label>
                    @*@Html.ListBoxFor(x => x.KanalEkle, (List<SelectListItem>)ViewBag.knl, new { @class = "form-control" })*@

                    <br />
                    <select class="form-control" id="FirmaEkle" name="SirketEkle" >

                        @for (int i = 0; i < ViewBag.frm.Count; i++)
                        {
                            if (ViewBag.frm[i].Selected == true)
                            {
                                <option selected value="@ViewBag.frm[i].Value">@ViewBag.frm[i].Text</option>

                            }
                            else
                            {
                                <option value="@ViewBag.frm[i].Value">@ViewBag.frm[i].Text</option>

                            }
                        }


                    </select>
                </div>

                <br />
                <br />
                <button type="submit" class="btn btn-primary">Guncelle</button>
                <a href="/CihazEkle/Index">Cihaz Listesi</a>

            </form>
        </div>
    </div>

</div>

<script type="text/javascript">
    $(function () {
        $('#Kullanicilar').multiselect({
            includeSelectAllOption: true
        });
        $(function () {
            $('#FirmaEkle').multiselect({
                includeSelectAllOption: true
            });
        });
    });
</script>